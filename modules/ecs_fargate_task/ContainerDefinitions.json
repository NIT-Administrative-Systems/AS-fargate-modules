[
    {
      "name": "${task_short_name}",
      "image": "${ecr_repository_url}:${ecr_image_tag}",
      "requiresCompatibilities": [
        "FARGATE"
     ],
      "compatibilities": [
        "FARGATE"
      ],
      "networkMode": "awsvpc",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-stream-prefix": "${cloudwatch_log_stream_prefix}",
          "awslogs-region": "${region}",
          "awslogs-group": "${cloudwatch_log_group_name}"
        }
      },
      "environment": ${container_env_variables},
      "secrets": ${container_ssm_secrets_list},
      "portMappings": ${container_port_mappings}
    }
  ]
